
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ObjectType {
  DEVICE
  REPOSITORY
  RAWDATA
}

model User {
  id            String @id
  password      String
  name          String
  isAdmin       Boolean? @default(false)
  isReset       Boolean? @default(true)

  createObjects ObjectMetaData[]
}

model ObjectMetaData {
  id             String @id
  type           ObjectType
  userId         String
  user           User @relation(fields: [userId], references: [id])
}